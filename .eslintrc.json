{
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "bracketSpacing": true,
        "semi": false,
        "printWidth": 120,
        "parser": "babylon"
      }
    ],
    "no-console": 0
  },
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
